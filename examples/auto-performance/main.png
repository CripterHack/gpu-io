<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="fluidGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a4b8c;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#2d5aa0;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#4a90e2;stop-opacity:0.6" />
    </linearGradient>
    <radialGradient id="particleGlow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.8" />
      <stop offset="70%" style="stop-color:#4a90e2;stop-opacity:0.4" />
      <stop offset="100%" style="stop-color:#1a4b8c;stop-opacity:0.1" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="600" fill="#0a1428"/>
  
  <!-- Fluid simulation visualization -->
  <path d="M 100 300 Q 200 250 300 300 T 500 280 T 700 300" 
        stroke="url(#fluidGradient)" stroke-width="3" fill="none" opacity="0.7"/>
  <path d="M 80 320 Q 180 270 280 320 T 480 300 T 680 320" 
        stroke="url(#fluidGradient)" stroke-width="2" fill="none" opacity="0.5"/>
  <path d="M 120 280 Q 220 230 320 280 T 520 260 T 720 280" 
        stroke="url(#fluidGradient)" stroke-width="2" fill="none" opacity="0.5"/>
  
  <!-- Particle effects -->
  <circle cx="150" cy="290" r="4" fill="url(#particleGlow)"/>
  <circle cx="250" cy="270" r="3" fill="url(#particleGlow)"/>
  <circle cx="350" cy="295" r="5" fill="url(#particleGlow)"/>
  <circle cx="450" cy="285" r="3" fill="url(#particleGlow)"/>
  <circle cx="550" cy="275" r="4" fill="url(#particleGlow)"/>
  <circle cx="650" cy="305" r="3" fill="url(#particleGlow)"/>
  
  <!-- Performance UI mockup -->
  <rect x="20" y="20" width="200" height="120" fill="rgba(0,0,0,0.7)" rx="8"/>
  <text x="30" y="40" fill="#ffffff" font-family="monospace" font-size="14">FPS: 58.3</text>
  <text x="30" y="60" fill="#ffffff" font-family="monospace" font-size="14">Quality: MEDIO</text>
  <text x="30" y="80" fill="#ffffff" font-family="monospace" font-size="14">Particles: 49,000</text>
  <text x="30" y="100" fill="#ffffff" font-family="monospace" font-size="14">Auto-tuning: ON</text>
  <text x="30" y="120" fill="#4a90e2" font-family="monospace" font-size="12">↓ Adjusting quality...</text>
  
  <!-- Control panel mockup -->
  <rect x="580" y="20" width="200" height="200" fill="rgba(0,0,0,0.8)" rx="8"/>
  <text x="590" y="40" fill="#ffffff" font-family="sans-serif" font-size="12" font-weight="bold">Performance Tuning</text>
  <text x="590" y="65" fill="#cccccc" font-family="sans-serif" font-size="11">☑ Auto-Tuning</text>
  <text x="590" y="85" fill="#cccccc" font-family="sans-serif" font-size="11">Manual Quality: Medio</text>
  
  <text x="590" y="110" fill="#ffffff" font-family="sans-serif" font-size="12" font-weight="bold">Display Options</text>
  <text x="590" y="130" fill="#cccccc" font-family="sans-serif" font-size="11">☑ Show FPS</text>
  <text x="590" y="150" fill="#cccccc" font-family="sans-serif" font-size="11">☑ Show Quality Info</text>
  
  <text x="590" y="175" fill="#ffffff" font-family="sans-serif" font-size="12" font-weight="bold">Quality Presets</text>
  <text x="590" y="195" fill="#4a90e2" font-family="sans-serif" font-size="11">Alto • Medio • Bajo • Minimo</text>
  
  <!-- Title -->
  <text x="400" y="550" fill="#ffffff" font-family="sans-serif" font-size="24" font-weight="bold" text-anchor="middle">Auto-Performance Tuning Demo</text>
  <text x="400" y="575" fill="#cccccc" font-family="sans-serif" font-size="14" text-anchor="middle">Dynamic quality adjustment for optimal performance</text>
</svg>